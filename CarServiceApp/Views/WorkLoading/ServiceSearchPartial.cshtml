@using CarServiceApp.Domain.Extension
@using CarServiceApp.Domain.Repository
@model List<CarServiceApp.Domain.Entity.Models.Service>
 
@if(Model.Count>0)
{
<table id="result_table">
    @foreach (var i in Model)
    { 
        <tr>
             <td>@i.Name</td>
                <td>@i.Id @Html.Hidden("service_id", i.Id)</td>
             <td><span style="cursor:pointer" class="fas fa-plus"></span></td>
        </tr>
    }
</table>
}
else
{
    <div style="text-align:center; height:40px">Нет данных по данному запросу...</div>
}