@model CarServiceApp.Domain.Entity.Models.CarColor

@{
    ViewBag.Title = "Редактирование цвета";
    Layout = "_DefaultLayout";
}

<div class="header-page">@ViewData["Title"]</div>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Hex" class="control-label"></label>
        <input asp-for="Hex" class="form-control" type="color" />
        <span asp-validation-for="Hex" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsMetallic" class="control-label"></label>
        <input asp-for="IsMetallic" class="form-check-input" type="checkbox" />
        <span asp-validation-for="IsMetallic" class="text-danger"></span>
    </div>

    <br>

    <div class="form-group">
        <button type="submit" class="btn btn-outline-primary">
            <i class="fas fa-check"></i> Сохранить
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-times"></i> Отмена
        </a>
    </div>
</form>
