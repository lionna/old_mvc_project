    <div id="map"></div>
</div>

<script>
    ymaps.ready(init);
    function init() {
        var myMap = new ymaps.Map("map", {
            center: [53.920942, 27.593110],
            zoom: 10
        }, {
            searchControlProvider: 'yandex#search'
        }),

            // Создаем геообъект с типом геометрии "Точка".
            myGeoObject = new ymaps.GeoObject({
                // Описание геометрии.
                geometry: {
                    type: "Point",
                    coordinates: [53.920942, 27.593110]
                },
                // Свойства.
                properties: {
                    // Контент метки.
                    iconContent: 'г. Минск, ул ХХХХХХХХХХ',
                    hintContent: '+375 17 ХХХ-ХХ-ХХ'
                }
            }, {
                // Опции.
                // Иконка метки будет растягиваться под размер ее содержимого.
                preset: 'islands#blackStretchyIcon',
                // Метку можно перемещать.
                draggable: true
            });

        myMap.geoObjects
            .add(myGeoObject)
     
            .add(new ymaps.Placemark([53.920942, 27.593110], {
                balloonContent: '<strong>iCarService</strong>'
            }, {
                preset: 'islands#governmentCircleIcon',
                iconColor: '#3b5998'
            }));
    }



</script>

