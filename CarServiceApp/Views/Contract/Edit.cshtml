<form asp-action="CreateContract" asp-asp-controller="Contract" method="post">
    <div class="header-page">@Model?.Employee?.FullName</div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="PersonnelNumber" />
    <input type="hidden" asp-for="ContractId" />
    <div class="form-group">
        <label asp-for="RecruitDate" class="control-label"></label>
        <input asp-for="RecruitDate" class="form-control" type="date" />
        <span asp-validation-for="RecruitDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DismissDate" class="control-label"></label>
        <input asp-for="DismissDate" class="form-control" type="date" />
        <span asp-validation-for="DismissDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Term" class="control-label"></label>
        <input asp-for="Term" class="form-control" type="number" />
        <span asp-validation-for="Term" class="text-danger"></span>
    </div>


    <br>
    <div class="form-group">

        <a onclick="Save('@Model.ContractId', this)" class="btn btn-outline-primary">
            <i class="fas fa-check"></i> Сохранить
        </a>
        <a onclick="Cancel('@Model.ContractId')" class="btn btn-outline-secondary">
            <i class="fas fa-times"></i> Отмена
        </a>
    </div>
</form>


