@{
    ViewBag.Title = "Главная страница Бухгалтера";
    Layout = "_AccountantLayout";
}

<div class="row">
    <div class="col-sm-3">
        <div class="card-body text-center">
            <a class="btn btn-outline-warning d-flex flex-column align-items-center" asp-area="" asp-controller="WorkLoading" asp-action="Index">
                <i class="fas fa-calendar-alt fa-3x"></i>
                <span class="text-truncate text-dark fw-bold">Расписание работ</span>
            </a>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="card-body text-center">
            <a class="btn btn-outline-warning d-flex flex-column align-items-center" asp-area="" asp-controller="Employee" asp-action="Index">
                <i class="fas fa-id-card-alt fa-3x" aria-hidden="true"></i>
                <span class="text-truncate text-dark fw-bold">Сотрудники</span>
            </a>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="card-body text-center">
            <a class="btn btn-outline-warning d-flex flex-column align-items-center" asp-area="" asp-controller="User" asp-action="Index">
                <i class="fa fa-user-circle fa-3x" aria-hidden="true"></i>
                <span class="text-truncate text-dark fw-bold">Договора</span>
            </a>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="card-body text-center">
            <a class="btn btn-outline-warning d-flex flex-column align-items-center" asp-area="" asp-controller="SparePartMaterials" asp-action="Index">
                <i class="fa fa-cogs fa-3x" aria-hidden="true"></i>
                <span class="text-truncate text-dark fw-bold">Запчасти</span>
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-3">
        <div class="card-body text-center">
            <a class="btn btn-outline-warning d-flex flex-column align-items-center" asp-area="" asp-controller="Providers" asp-action="Index">
                <i class="fas fa-boxes fa-3x" aria-hidden="true"></i>
                <span class="text-truncate text-dark fw-bold">Поставщики</span>
            </a>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="card-body text-center">
            <a class="btn btn-outline-warning d-flex flex-column align-items-center" asp-area="" asp-controller="Services" asp-action="Index">
                <i class="fa fa-wrench fa-3x" aria-hidden="true"></i>
                <span class="text-truncate text-dark fw-bold">Услуги</span>
            </a>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="card-body text-center">
            <a class="btn btn-outline-warning d-flex flex-column align-items-center" asp-area="" asp-controller="Departments" asp-action="Index">
                <i class="fa fa-building fa-3x" aria-hidden="true"></i>
