
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Бухгалтер - iCarService</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true" /> *@



    @* <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-xr1zZZKI8P+STTmQW3yq8gB2A+aAGyCy8vhYf4vuaPtflz8SEwW+uYL8ejq/ldlS4Jo3Cpr1Y/KMdsI2MHsD4A==" crossorigin="anonymous" referrerpolicy="no-referrer" /> *@
    @*   <link rel="stylesheet" href="~/lib/fontawesome/css/fontawesome.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarServiceApp.styles.css" asp-append-version="true" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="...">
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-warning  border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Account" asp-action="Accountant">
                    <img src="~/img/logo_menu.png" alt="" width="24" height="24" class="d-inline-block align-text-top">
                    iCarService
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Добавленный код для выпадающего списка -->
                    <div class="nav-item dropdown">
                        <a class="nav-link text-light dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user-shield"></i> Сотрудники
                        </a>
                        <div class="dropdown-menu dropdown-menu-dark">
                            <a class="dropdown-item" asp-area="" asp-controller="Employees" asp-action="Create">Новый сорудник</a>
                            <hr class="dropdown-divider">
                            <a class="dropdown-item" asp-area="" asp-controller="Employees" asp-action="Index">Сотрудники</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Departments" asp-action="Index">Отделы</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Posts" asp-action="Index">Должности</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Contracts" asp-action="Index">Договора</a>
                            <hr class="dropdown-divider">
                            <a class="dropdown-item" asp-area="" asp-controller="WorkLoading" asp-action="Index">Расписание работ</a>
                        </div>
                    </div>
                     

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                        <!-- Добавленный код для выпадающего списка -->
                        <div class="nav-item dropdown">
                            <a class="nav-link text-light dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-print"></i>   Отчеты
                            </a>
                            <div class="dropdown-menu dropdown-menu-dark">
                                <a class="dropdown-item" asp-area="" asp-controller="ReportView" asp-action="ReportByMonthForEmployee">Выработка мастеров</a>
                                <a class="dropdown-item" asp-area="" asp-controller="ReportView" asp-action="ReportOrders">Отчет по заказам</a>
                                <a class="dropdown-item" asp-area="" asp-controller="ReportView" asp-action="ReportByProviders">Отчет по поставщикам</a>
                                <li><hr class="dropdown-divider"></li>
                                <a class="dropdown-item" asp-area="" asp-controller="ReportView" asp-action="DiagramCountOfOrders">Диаграмма заказов</a>
                                <a class="dropdown-item" asp-area="" asp-controller="ReportView" asp-action="DiagramTotalIncomeByServices">Диаграмма доходов</a>
                                <li><hr class="dropdown-divider"></li>
                                <a class="dropdown-item" asp-area="" asp-controller="ReportView" asp-action="AnalysePartsTrade">Анализ по запчастям</a>
                                <a class="dropdown-item" asp-area="" asp-controller="ReportView" asp-action="AnalyseServicesTrade">Анализ по услугам</a>
                                <li><hr class="dropdown-divider"></li>
                                <a class="dropdown-item" asp-area="" asp-controller="ReportView" asp-action="PrintReportByMonthForEmployee">Документ о работе</a>
                                <a class="dropdown-item" asp-area="" asp-controller="ReportView" asp-action="PrintReportOrders">Документ о заказах</a>
                                <a class="dropdown-item" asp-area="" asp-controller="ReportView" asp-action="PrintReportByProviders">Документ о поставках</a>
                            </div>
                        </div>

                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <img src="~/img/logo_menu.png" alt="" width="24" height="24" class="">
            &copy; 2024 - iCarService - <a style="text-decoration: none;" asp-area="" asp-controller="Account" asp-action="Accountant">Главная</a>
            <a style="text-decoration: none;" asp-area="" asp-controller="Home" asp-action="Contact"> <i class="fas fa-phone"></i> Контакты</a>
            <a style="text-decoration: none;" asp-area="" asp-controller="Home" asp-action="Privacy"> <i class="fas fa-tasks"></i> Политика конфиденциальности</a>

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/fontawesome/js/all.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
