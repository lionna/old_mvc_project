    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarServiceApp.styles.css" asp-append-version="true" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="...">
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  bg-dark  border-bottom box-shadow mb-3" style="background-color: #e3f2fd;">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Account" asp-action="Manager">
                    <img src="~/img/logo_menu.png" alt="" width="24" height="24" class="d-inline-block align-text-top">
                    iCarService
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <!-- Добавленный код для выпадающего списка -->
                    <div class="nav-item dropdown">
                        <a class="nav-link text-light dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user-shield"></i> Клиенты
                        </a>
                        <div class="dropdown-menu dropdown-menu-dark">
                            <a class="dropdown-item" asp-area="" asp-controller="Clients" asp-action="Create">Новый клиент</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Clients" asp-action="Index">Клиенты</a>
                            <hr class="dropdown-divider">
                            <a class="dropdown-item" asp-area="" asp-controller="Cars" asp-action="Search">Автомобили</a>
                            <a class="dropdown-item" asp-area="" asp-controller="PreRecords" asp-action="List">Предзаказы</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Order" asp-action="Search">Заказы</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Services" asp-action="Index">Услуги</a>                            
                        </div>
                    </div>

                    <!-- Добавленный код для выпадающего списка -->
                    <div class="nav-item dropdown">
                        <a class="nav-link text-light dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-boxes"></i>    Склад
                        </a>
                        <div class="dropdown-menu dropdown-menu-dark">
                            <a class="dropdown-item" asp-area="" asp-controller="-----" asp-action="Index">Учет материалов от поставщика</a>
                            <a class="dropdown-item" asp-area="" asp-controller="----" asp-action="Index">Учет материалов от клиента</a>
                            <hr class="dropdown-divider">
                            <a class="dropdown-item" asp-area="" asp-controller="SparePartMaterials" asp-action="Index">Поиск материалов</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Providers" asp-action="Index">Поставщики</a>
                            <hr class="dropdown-divider">
                            <a class="dropdown-item" asp-area="" asp-controller="Parts" asp-action="Index">База материалов</a>
                        </div>
                    </div>

                    <!-- Добавленный код для выпадающего списка -->
                    <div class="nav-item dropdown">
                        <a class="nav-link text-light dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-calendar-alt"></i> Запись
                        </a>
                        <div class="dropdown-menu dropdown-menu-dark">
                            <a class="dropdown-item" asp-area="" asp-controller="PreRecords" asp-action="Create">Добавить новую запись</a>
                            <a class="dropdown-item" asp-area="" asp-controller="PreRecords" asp-action="List">Поиск</a>
                            <li><hr class="dropdown-divider"></li>
                            <a class="dropdown-item" asp-area="" asp-controller="WorkLoading" asp-action="Index">Таблица загрузки мастеров</a>
                        </div>
                    </div>

                    <!-- Добавленный код для выпадающего списка -->
                    <div class="dropdown">
                        <a class="nav-link text-light dropdown-toggle" href="#" role="button" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-cogs"></i>      Настройки
                        </a>
                        <div class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" asp-area="" asp-controller="CarModels" asp-action="Index">Модели машин</a>
                            <a class="dropdown-item" asp-area="" asp-controller="CarBrands" asp-action="Index">Бренды машин</a>
                            <a class="dropdown-item" asp-area="" asp-controller="CarColors" asp-action="Index">Цвета машин</a>
                            <a class="dropdown-item" asp-area="" asp-controller="CarSeries" asp-action="Index">Серии машин</a>
                            <a class="dropdown-item" asp-area="" asp-controller="CarModifications" asp-action="Index">Модификации машин</a>
                            <a class="dropdown-item" asp-area="" asp-controller="CarGenerations" asp-action="Index">Покаление машин</a>
                        </div>
                    </div>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <img src="~/img/logo_menu.png" alt="" width="24" height="24" class="">
            &copy; 2024 - iCarService - <a style="text-decoration: none;" asp-area="" asp-controller="Account" asp-action="Manager">Главная</a>
            <a style="text-decoration: none;" asp-area="" asp-controller="Home" asp-action="Contact"> <i class="fas fa-phone"></i> Контакты</a>
            <a style="text-decoration: none;" asp-area="" asp-controller="Home" asp-action="Privacy"> <i class="fas fa-tasks"></i> Политика конфиденциальности</a>
        
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/fontawesome/js/all.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
